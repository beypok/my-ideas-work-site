{
    "compilerOptions": {
        /* Basic Options */

        "lib": ["ESNext"],
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "references": [{ "path": "./shared" }]
}
